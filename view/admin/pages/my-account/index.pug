extends ../../layout/default.pug
block main
    h1 Thông tin cá nhân    
    if(user.image)
        img(src=user.image width="100px" class="mb-3")
    if(user.name)
        p Họ tên: <b>#{user.name}</b>
    if(user.email)
        p Email : <b>#{user.email}</b>
    if(user.phone)
        p Phone : <b>#{user.phone}</b>
    p
        span Trạng thái 
        span 
            <b>#{user.status == "active" ? "Hoạt động" : "Không hoạt động"}</b>
    if(user.role)
        p Phân quyền : <b>#{user.role.title}</b>
    a(
        href=`${prefixAdmin}/my-account/edit`
        class="btn btn-primary"
    ) Chỉnh sửa