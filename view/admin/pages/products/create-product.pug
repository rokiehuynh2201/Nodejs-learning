extends ../../layout/default.pug

block main
    h1 Tạo sản phẩm mới 
    form(
        action=`${prefixAdmin}/product/create` 
        method="post"
        enctype="multipart/form-data"
    )
        .form-group
            label(for="title") Tiêu đề
            input(type="text" class="form-control" id="title" name="title" value="")
        .form-group
            label(for="desc") Miêu tả
            textarea(type="text" class="form-control" id="desc" rows="5" name="desc" value="")
        .form-group
            label(for="price") Giá
            input(type="text" class="form-control" id="price" name="price" value="")
        .form-group
            label(for="category") Loại
            input(type="text" class="form-control" id="category" name="category" value="")
        .form-group
            label(for="quantity") Số lượng
            input(type="number" class="form-control" id="quantity" min="1" value="1" name="quantity")
        .form-group
            label(for="rating") Rating
            input(type="number" class="form-control" id="rating" min="1" value="1" name="rating")      
        .form-group
            label(for="image") Ảnh sản phẩm
            input(type="file" class="form-control-file" id="image" name="uploaded_file")     
        div(
            class="form-check form-check-inline"
        )  
            input(
                class="form-check-input" type="radio" name="status" id="inlineRadio1" value="active"
                checked
            )
            label(for="inlineRadio1" class="form-check-label" ) hoạt động
        div(
            class="form-check form-check-inline"
        )  
            input(
                class="form-check-input" type="radio" name="status" id="inlineRadio1" value="active"
            )
            label(for="inlineRadio1" class="form-check-label" ) Dừng hoạt động
        .form-group
            button(
                class="btn btn-primary"
                type="submit"
            ) Gửi